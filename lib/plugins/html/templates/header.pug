mixin headerLink(id, name)
  if (headers[id])
    li
      - active = menu===id ? 'active' : ''
      a(href= rootPath + id + '.html', class=active)= name

.darkblue.nav
  .navgrid
    .logo
        a(href=sitespeedioURL)
          img.navbar-brand(src= assetsPath + 'img/sitespeed.io-logo.png', width='162', height='50', alt='sitespeed.io logo')
    ul
      +headerLink('index', (translations && translations['nav.summary']) || 'Summary')
      +headerLink('detailed', (translations && translations['nav.detailed']) || 'Detailed Summary')
      +headerLink('pages', (translations && translations['nav.pages']) || 'Pages')
      +headerLink('domains', (translations && translations['nav.domains']) || 'Domains')
      +headerLink('toplist', (translations && translations['nav.toplist']) || 'Toplist')
      +headerLink('assets', (translations && translations['nav.assets']) || 'Assets')
      +headerLink('budget', (translations && translations['nav.budget']) || 'Budget')
      +headerLink('errors', (translations && translations['nav.errors']) || 'Errors')
