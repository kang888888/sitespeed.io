- const t = translations || {}
a#first-vs-third
h3 First party requests and sizes per content type
p Calculated using #{pagexray.firstPartyRegEx} (use 
    code --firstParty 
    | to configure).
.responsive
    table(data-sortable, id='contentSizeFirstParty')
        +rowHeading([t['table.content'] || 'Content', t['table.headerSize'] || 'Header Size', t['table.transferSize'] || 'Transfer Size', t['table.contentSize'] || 'Content Size', t['table.requests'] || 'Requests'])
        each data, type in pagexray.firstParty.contentTypes
            tr
                td(data-title=(t && t['table.contentType']) ? t['table.contentType'] : 'Content Type') #{type}
                +sizeCell((t && t['table.headerSize']) ? t['table.headerSize'] : 'headerSize', data.headerSize)
                +sizeCell((t && t['table.transferSize']) ? t['table.transferSize'] : 'transferSize', data.transferSize)
                +sizeCell((t && t['table.contentSize']) ? t['table.contentSize'] : 'contentSize', data.contentSize)
                +numberCell((t && t['table.requests']) ? t['table.requests'] : 'requests', data.requests)
        tr
            td(data-title=(t && t['table.total']) ? t['table.total'] : 'Total') #{t['table.total'] || 'Total'}
            +sizeCell((t && t['table.headerSize']) ? t['table.headerSize'] : 'headerSize', pagexray.firstParty.headerSize)
            +sizeCell((t && t['table.transferSize']) ? t['table.transferSize'] : 'transferSize', pagexray.firstParty.transferSize)
            +sizeCell((t && t['table.contentSize']) ? t['table.contentSize'] : 'contentSize', pagexray.firstParty.contentSize)
            +numberCell((t && t['table.requests']) ? t['table.requests'] : 'requests', pagexray.firstParty.requests)

